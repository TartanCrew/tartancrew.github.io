mixin navitem(title, name, url)
    li(class=name===title?'active':undefined): a(href=url)= title

mixin navbar(name)
    .container
        .row
            nav.navbar.navbar-default.col-lg-12(role="navigation")
                .navbar-header
                    button.navbar-toggle(type="button" data-toggle="collapse" data-target="#navbar-links")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') Carnegie Mellon Crew
                .collapse.navbar-collapse#navbar-links 
                    ul.nav.navbar-nav
                        +navitem("Home", name, '/')
                        +navitem("Current", name, '/current')
                        +navitem("Prospective", name, '/prospective')
                        +navitem("Board", name, '/board')
                        +navitem("Alumni", name, '/alumni')
                .maroon-banner
