mixin navitem(title, url)
    li: a(href=url)= title 

nav#navbar.navbar.navbar-default(role="navigation")
    .maroon-banner
        .navbar-header
            .navbar-brand
                a(href="#") Carnegie Mellon University Rowing Club
                button.navbar-toggle(type="button" data-toggle="collapse" data-target="#navbar-links")
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
    .collapse.navbar-collapse#navbar-links 
        ul.nav.navbar-nav
            +navitem('Home', '#')
            +navitem('Prospective', '#prospective')
            +navitem('Rosters', '#rosters')
            +navitem('Board', '#board')
            +navitem('Alumni', '#alumni')
            +navitem('Donate', '#donate')
